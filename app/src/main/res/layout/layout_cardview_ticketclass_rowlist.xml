<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1.0"
    android:background="@color/white"
    android:paddingTop="10dp"
    >

    <LinearLayout
        android:id="@+id/ll_pnr_status"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minWidth="130.0dip"
        android:orientation="vertical"
        android:paddingLeft="10.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="5.0dip"
        android:paddingBottom="5.0dip"
        android:background="@drawable/blue_fill_bt"
        android:layout_margin="5dp"
        >

        <com.kha.train.widget.MyTextView
            android:id="@+id/tv_ticket_class"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="1 AC"
            android:textColor="@color/white"
            android:textSize="13.0sp"
            app:txttype="@string/medium" />

        <com.kha.train.widget.MyTextView
            android:id="@+id/tv_ticket_price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dip"
            android:gravity="left"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14.0sp"
            app:txttype="@string/medium" />

        <com.kha.train.widget.MyTextView
            android:id="@+id/tv_ticket_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dip"
            android:gravity="left"
            android:text="Loading..."
            android:textColor="@color/white"
            android:textSize="13.0sp"
            app:txttype="@string/regular" />

        <com.kha.train.widget.MyTextView
            android:id="@+id/tv_ticket_sync"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dip"
            android:gravity="left"
            android:text="Tap for update"
            android:textColor="@color/white"
            android:textSize="12.0sp"
            android:visibility="gone"
            app:txttype="@string/regular" />
    </LinearLayout>

</LinearLayout>