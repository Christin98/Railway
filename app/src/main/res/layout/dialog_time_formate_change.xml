<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20.0dip">

    <com.kha.train.widget.MyTextView
        android:id="@+id/tv_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:text="Select Time Formate"
        android:textColor="@color/black"
        android:textSize="20.0sp"
        app:txttype="@string/regular" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35.0dip"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="30.0dip"
        android:orientation="horizontal">

        <com.kha.train.widget.MyTextView
            android:id="@+id/tv_12hr"
            android:layout_width="0.0dip"
            android:layout_height="35.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/bg_round_corner_blue"
            android:gravity="center"
            android:paddingLeft="0.0dip"
            android:text="12 hours"
            android:textColor="@color/white" />

        <com.kha.train.widget.MyTextView
            android:id="@+id/tv_24hr"
            android:layout_width="0.0dip"
            android:layout_height="35.0dip"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/bg_round_corner_blue"
            android:gravity="center"
            android:text="24 hours"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>