<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp"
    >

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/blue_fill_out_bt"
        android:gravity="bottom"
        android:orientation="vertical"
        android:tag="1"
        >

        <com.kha.train.widget.MyTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:layout_marginBottom="5.0dip"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:minWidth="90.0dip"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:text="sleeper"
            android:textColor="@color/blue"
            android:textSize="12.0sp"
            app:txttype="@string/medium" />

        <com.kha.train.widget.MyTextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_marginBottom="10.0dip"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:minWidth="50.0dip"
            android:text="Loading..."
            android:textColor="@color/blue"
            android:textSize="12.0sp"
            app:txttype="@string/medium" />

        <View
            android:id="@+id/v_select"
            android:layout_width="fill_parent"
            android:layout_height="7.0dip"
            android:layout_marginLeft="1.0dip"
            android:layout_marginRight="1.0dip"
            android:layout_marginBottom="1.0dip"
            android:background="@color/blue"
            android:visibility="invisible" />
    </LinearLayout>
</LinearLayout>